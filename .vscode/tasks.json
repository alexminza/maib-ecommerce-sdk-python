{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Python: build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "python3",
            "args": [
                "-m",
                "build"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Python: PyPI twine upload",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "twine",
                "upload",
                "--repository",
                "testpypi",
                "dist/*"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}